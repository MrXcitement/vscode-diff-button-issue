# .editorconfig -- define a consistent coding style for this project
# Docs: https://editorconfig.org/

# top-most EditorConfig file
root = true

# coding style for all files
[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
